{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "jsx": "react",
        "sourceMap": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "baseUrl": ".",
        "typeRoots": ["node_modules/@types", "src/types"],
        "lib": ["esnext.intl", "es2017.intl", "es2018.intl", "dom", "ESNext"],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "tslint:latest",
        "tslint-config-prettier"
    ]
}
